{{!

    Renders:
      Instagram Icon
      Instagram Author URL
      Instagram Author Title
      Instagram Image
      Instagram Date
      Instagram Likes Count
      Instagram Comments Count

}}

{{#is "index"}}

<div data-js="instagram">
  
  <article class="post post--small post--overlay post--widget post--instagram" data-ani="hide" data-js="widget hover">

    <div class="post-inner" data-js="hover-inner">

      <header class="post-item post-header" data-ani="hide" data-js="hover-header">
        <div class="wrapper post-wrapper">

          <a href="" target="_blank" class="avatar icon icon-instagram post-author" data-js="widget-author-url">
            <span class="avatar-item" data-js="widget-author-title"></span>
          </a>

        </div>
      </header>

      <figure class="post-media" data-js="widget-media"></figure>
      <div class="post-cover" data-ani="hide" data-js="hover-cover"></div>

      <footer class="post-item post-footer" data-ani="hide" data-js="hover-footer">
        <div class="wrapper post-wrapper">

          <div class="meta post-meta">
            <a href="" target="_blank" class="icon-ui icon-ui-date meta-item meta-date" data-js="widget-date">
              <span class="meta-count" data-js="widget-date-stamp"></span>
            </a>
            <a href="" target="_blank" class="icon-ui icon-ui-comment meta-item meta-comment" data-js="widget-comment">
              <span class="meta-count" data-js="widget-comment-count"></span>
            </a>
            <a href="" target="_blank" class="icon-ui icon-ui-like meta-item meta-like" data-js="widget-like">
              <span class="meta-count" data-js="widget-like-count"></span>
            </a>
          </div>
          
        </div>
      </footer>

    </div>

  </article>

</div>

{{/is}}
